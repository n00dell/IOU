<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IOU.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IOU.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="IOU">
    <TabBar>
        <ShellContent
        Title="Dahsboard"
        ContentTemplate="{DataTemplate local:DashboardPage}"
       Route="DashboardPage" />

        <ShellContent
    Title="Debts"
    ContentTemplate="{DataTemplate local:DebtsPage}"
    Route="DebtsPage" />

        <ShellContent
    Title="Notifications"
    ContentTemplate="{DataTemplate local:NotificationsPage}"
    Route="NotificationsPage" />

        <ShellContent
    Title="Payments"
    ContentTemplate="{DataTemplate local:PaymentsPage}"
    Route="PaymentsPage" />
    </TabBar>
</Shell>
