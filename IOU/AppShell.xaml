<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IOU.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IOU"
    Shell.FlyoutBehavior="Flyout"
    Title="IOU">

    <ShellContent
        Title="Dahsboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />
    
    <ShellContent
    Title="Debts"
    ContentTemplate="{DataTemplate views:DebtsPage}"
    Route="DebtsPage" />
    
    <ShellContent
    Title="Notifications"
    ContentTemplate="{DataTemplate views:NotificationsPage}"
    Route="NotificationsPage" />
    
    <ShellContent
    Title="Payments"
    ContentTemplate="{DataTemplate views:PaymentsPage}"
    Route="PaymentsPage" />

</Shell>
