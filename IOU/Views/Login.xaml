<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IOU.Views.Login"
             Title="Login">
    <VerticalStackLayout>
        <Grid HorizontalOptions="Center" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Text="Login" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Aquamarine"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Column="0" Grid.Row="0">
                    <Label Text="Email:" FontSize="20"/>
                </Grid>
                <Grid Grid.Column="0" Grid.Row="1">
                    <Label Text="Password:" FontSize="20"/>
                </Grid>
                <Grid Grid.Column="1" Grid.Row="0">
                    <Entry Placeholder="Email" WidthRequest="500" />
                </Grid>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Entry Placeholder="Password" IsPassword="True"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="2" Margin="10">
                <Button Text="Login" Clicked="Login_Clicked" WidthRequest="100"/>
            </Grid>
        </Grid>
    </VerticalStackLayout>
</ContentPage>