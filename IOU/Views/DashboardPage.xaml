<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IOU.Views.DashboardPage"
             Title="Dashboard">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">
            <!-- User's Full Name Display -->
            <Label Text="{Binding FullName}"
               FontSize="24"
               HorizontalTextAlignment="Center"
               TextColor="#0078D7" />
            <Border BackgroundColor="Gray" Padding="10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Total Outstanding Debt" FontAttributes="Bold" FontSize="20"/>
                    <Label Grid.Row="1" Text="Amount:" FontAttributes="Bold" FontSize="30"/>
                </Grid>
            </Border>
            <Border BackgroundColor="Gray" Padding="10">
                <VerticalStackLayout>
                    <Label Text="Next Payment Due"/>
                    <Label Text="{Binding NextPaymentDate, StringFormat='{0:d}'}"/>
                    <Label Text="{Binding NextPaymentAmount, StringFormat='{0:C}'}" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Border>
            <Border BackgroundColor="Gray" Padding="10">
                <VerticalStackLayout>
                    <Label Text="Recent Activity"/>
                    <CollectionView ItemsSource="{Binding RecentActivities}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Label Text="{Binding Description}"/>
                                    <Label Text="{Binding Date, StringFormat='{0:d}'}" FontSize="Small" TextColor="Gray"/>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>